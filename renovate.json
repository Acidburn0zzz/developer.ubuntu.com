{
  "extends": [
    "config:base",
    "schedule:weekends"
  ],
  "packageRules": [
    {
      "managers": ["pip_requirements"],
      "packageNames": ["markdown"],
      "allowedVersions": "<3"
    },
    {
      "managers": ["pip_requirements"],
      "packageNames": ["django"],
      "allowedVersions": "<2"
    },
    {
      "depTypeList": ["devDependencies"],
      "extends": [":automergeMinor"]
    },
    {
      "packagePatterns": ["*"],
      "minor": {
        "groupName": "all non-major dependencies",
        "groupSlug": "all-minor-patch"
      }
    }
  ]
}
